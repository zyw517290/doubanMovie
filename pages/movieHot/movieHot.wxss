/* movieHot.wxss */
.movieApp{
  background-color:#3a3a3a;
  min-height: 100%;
}
.movieApp .slide-image{
  width:100%;
  height:200px;
}
.movieApp .movie{
  display:flex;
  flex-direction:row;
}
.movieApp .movie .movie-pic{
  width:100px;
  height:150px;
  margin-top:10px;
  margin-bottom:10px;
}
.movieApp .movie .movie-pic .movie-pic-img{
  width:100px;
  height:150px;
}
.movieApp .movie .movie-info{
  flex:1;
}
.movieApp .movie .movie-info .movie-info-center{
  padding-left:15px;
  font-size:12px;
  color:#fff;
  line-height:22px;
}
.movie-hr{
  width:100%;
  height:2px;
  border-top:1px solid #fff;
  border-bottom:1px solid #fff;
  background-color:#000;
  opacity: 0.2;
}
